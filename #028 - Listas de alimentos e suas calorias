comida = str(input('Digite o nome de quais alimentos com calorias :  '))
if comida == 'pizza':
    print('Tem a caloria alta de 3000 calorias')
if comida == 'arroz':
    print('Tem a caloria mediana de 1200 calorias')
if comida == 'feijao':
    print('Tem a acaloria intermediana de 1500 calorias')
elif comida == 'alface':
    print('Tem a caloria baixa: 200 calorias')


