from math import radians, sin, cos, tan
angulo = float(input('Digite o o angulo que deseja.:'))
seno = sin(radians(angulo))
coss = cos(radians(angulo))
tang = tan(radians(angulo))

print('Angulo {}, SENO {:.2f}, COSSENO {:.2f} e TANGENTE {:.2f}'.format(
    angulo, seno, coss, tang))



